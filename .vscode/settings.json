{
  //django templates are written like html but often have different metadata that makes them recognized as .django-html
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "html"
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "html.format.preserveNewLines": false,
  "html.format.templating": true,
  // Python settings
  //The following will prompt you to install autopep8 and will use it as the default formatter
  "python.formatting.provider": "autopep8",
  //The following will automatically run python3 instead of python(Which is v2)
  "python.defaultInterpreterPath": "python3",
  //Which formatter to use for each filetype.
  "[html, django-html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[md]": {
    "editor.defaultFormatter": "vscode.markdown-language-features"
  },
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.proseWrap": "preserve",
  "editor.tabSize": 4,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 80
}
